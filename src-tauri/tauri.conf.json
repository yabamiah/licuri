{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
    "productName": "Planner Task",
    "version": "0.1.0",
    "identifier": "com.plannertask.app",
    "build": {
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Planner Task",
                "width": 640,
                "height": 720,
                "minWidth": 380,
                "minHeight": 500,
                "decorations": false,
                "resizable": true,
                "alwaysOnTop": true,
                "transparent": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}